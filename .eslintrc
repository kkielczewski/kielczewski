{
  "extends": ["airbnb-base"],
  "plugins": [
      "react",
      "jsx-a11y",
      "import"
  ],
  "env": {
      "browser": true,
      "es6": true
  },
  "parser": "babel-eslint",
  "rules": {
      "no-unused-vars": 0,
      "max-len": [1, 160, 2, {
          "ignoreComments": true
      }],
      "comma-dangle": ["error", "never"],
      "no-underscore-dangle": ["error", { "allow": ["_id"] }],
      "jsx-a11y/href-no-hash": "off",
      "no-console": "off",
      "linebreak-style": 0,
      "no-script-url": "off",
      "no-param-reassign": "off",
      "react/require-default-props": "off"
  },
  "settings": {
      "import/resolver": {
          "node": {
              "extensions": [".js",".jsx"],
              "moduleDirectory": [
                  "node_modules",
                  "src"
              ]
        }
      }
  }
}
